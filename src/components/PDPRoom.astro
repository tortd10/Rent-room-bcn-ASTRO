---
import RoomDetails from "./RoomDetails.astro";
import RoomGallery from "./RoomGallery.astro";

// Props del componente
interface Room {
  name: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
}

const { name, description, imageSrc, imageAlt } = Astro.props as Room;
---

<div class="flex flex-col space-y-8">
  <!-- Botón de volver -->

  <div class="py-10">
    <a href="/Habitaciones" 
        class="text-lg font-semibold text-white bg-secondary hover:contrast-150 rounded-md tracking-tight py-2 px-4"
    >
        ← Volver atrás
    </a>

  <!-- Contenedor principal -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 bg-white p-6 rounded-lg shadow-md">
    <!-- Galería de imágenes -->
    <RoomGallery 
      imageSrc={imageSrc} 
      imageAlt={imageAlt} 
    />

    <!-- Detalles de la habitación -->
    <RoomDetails 
      name={name} 
      description={description} 
    />
  </div>
</div>



---
import { ROOMS } from '../data/rooms.ts';
import RoomsCard from './RoomsCard.astro';

const availableRooms = ROOMS.filter(room => room.available); // Filtrar habitaciones disponibles
---

<main class="bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <h2 class="sm:text-2xl md:text-4xl xs:text-2xl text-center font-black text-balance tracking-tight text-5xl  text-primary pb-6">
      HABITACIONES DISPONIBLES
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {availableRooms.map(room => (
        <RoomsCard 
          name={room.name} 
          description={room.description} 
          imageSrc={room.imageSrc} 
          imageAlt={room.imageAlt} 
          href={`/${room.slug}`} 
        />
      ))}
    </div>
  </div>
</main>

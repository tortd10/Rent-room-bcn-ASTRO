---
import FlatsCard from "@components/FlatsCard.astro";
import { FLATS } from '../data/flats';
---

<section class="w-full mx-auto lg:max-w-7xl">
  <article
    class="p-4 pb-6 flex flex-col gap-6 bg-gradient-to-r from-[#B9D1F7] to-[#91AFE5] md:py-[70px] md:px-10 md:items-center md:relative md:rounded-2xl md:mx-4"
  >
    <h2
      class="sm:text-2xl md:text-4xl text-primary font-black  text-balance text-center text-ij-red tracking-tight lg:text-4xl lg:z-10 lg:mb-4"
    >
      Nuestos pisos
    </h2>

    <a href=""
      class="flex items-center px-16 pb-6 -mx-4 overflow-x-auto no-scrollbar gap-7 snap-x snap-mandatory max-w-[1536px] md:overflow-visible md:grid md:grid-cols-1 lg:grid-cols-1 lg:p-0 lg:m-0 lg:z-10 md:justify-items-center xl:grid-cols-2"
    >
      {
        FLATS.map(({ mapImage, title, flat_id }) => (
          <FlatsCard
            mapImage={mapImage}
            title={title}
            id={flat_id}
          />
        ))
      }
    </a>
  </article>
</section>

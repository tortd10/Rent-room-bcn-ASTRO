---
import SectionContainer from "@/components/SectionContainer.astro"
import LayoutAdmin from "@/layouts/LayoutAdmin.astro"

const { user } = Astro.locals
if (!user) {
  return Astro.redirect("/admin")
}
---

<LayoutAdmin title="RentRoomBcn - Reservas">
  <SectionContainer>
    <div class="p-6 space-y-6">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">Gestión de Reservas</h1>
        <a href="/admin/bookings/new" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition-colors">
          + Nueva Reserva
        </a>
      </div>

      <div class="bg-white shadow rounded-lg p-6 text-center">
        <p class="text-gray-500">Módulo de reservas en desarrollo</p>
        <p class="text-sm text-gray-400 mt-2">Próximamente podrás gestionar todas las reservas aquí</p>
      </div>
    </div>
  </SectionContainer>
</LayoutAdmin>